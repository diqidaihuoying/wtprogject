<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:background="@color/color_dfdfdf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/chat_root_top"
        android:layout_width="match_parent"
        android:layout_height="36dp">
    <EditText
        android:id="@+id/chat_edittext"
        android:background="@drawable/input_bg"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/chat_send"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:id="@+id/chat_send"
        android:text="发送"
        android:textColor="@color/color_d1d1d1"
        android:background="@drawable/chat_send_select_bg"
        android:layout_width="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_height="32dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/chat_root_top"
        android:orientation="horizontal"
        android:background="@mipmap/chat_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/chat_voice"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/chat_recorder"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/chat_picture"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/chat_takephone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/chat_redpage"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/chat_biaoqing"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/chat_jia"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>