<?xml version="1.0" encoding="utf-8"?>
<mj.wt.wtapp.widget.dragview.view.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipelayout"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:layout_gravity="center_vertical"
    android:minHeight="70dp">

    <mj.wt.wtapp.widget.dragview.view.FrontLayout
        android:id="@+id/front"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/icon_head" />

        <TextView
            android:id="@+id/tv_name"
            android:text="万涛"
            android:textColor="@color/color_3c3c3c"
            android:layout_alignTop="@id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_head"
            android:textSize="14sp" />
        <TextView
            android:layout_toRightOf="@id/iv_head"
            android:id="@+id/tv_message"
            android:text="it is news"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:id="@+id/tv_time"
                android:layout_alignBottom="@id/tv_name"
                android:text="下午 3:40"
                android:maxLines="1"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tv_message"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:id="@+id/point"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_bg"
            android:gravity="center"
            android:maxLines="1"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </mj.wt.wtapp.widget.dragview.view.FrontLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_call"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:background="#888888"
            android:gravity="center"
            android:text="标记已读"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:background="#ff0000"
            android:gravity="center"
            android:text="删除"
            android:textColor="@android:color/white" />
    </LinearLayout>

</mj.wt.wtapp.widget.dragview.view.SwipeLayout>